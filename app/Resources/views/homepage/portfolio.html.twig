<section id="portfolio" class="section bg-white-f1">
    <div class="container">
        <div class="text-center">
            <h2 class="heading wow tada">{% trans %}portfolio{% endtrans %}</h2>
            <p class="font-20 uppercase mt-25 mb-20">{% trans %}portfolio_subtitle{% endtrans %}</p>
        </div>
    </div>
    <div class="gallery-open-container">
        <a href="#" class="gallery-open"><i></i><span>{% trans %}open_portfolio{% endtrans %}</span></a>
    </div>
    <div class="gallery">
        <div data-title="{% trans %}prava70{% endtrans %}" data-description="{% trans %}prava70_description{% endtrans %}" data-content="{{ path('prava70') }}" class="gallery-item active">
            <div class="gallery-img">
                <img src="{{ asset('public/img/portfolio/prava70/prava70.jpg') }}"/>
            </div>
        </div>
        <div data-title="{% trans %}arctic{% endtrans %}" data-description="{% trans %}arctic_description{% endtrans %}" data-content="{{ path('arctic') }}" class="gallery-item gallery-item-right">
            <div class="gallery-img">
                <img src="{{ asset('public/img/portfolio/arctic/arctic.jpg') }}"/>
            </div>
        </div>
        <div data-title="{% trans %}evakuator{% endtrans %}" data-description="{% trans %}evakuator_description{% endtrans %}" data-content="{{ path('evakuator') }}" class="gallery-item gallery-item-right">
            <div class="gallery-img">
                <img src="{{ asset('public/img/portfolio/evakuator/evakuator.jpg') }}"/>
            </div>
        </div>
        <div data-title="{% trans %}chemistry{% endtrans %}" data-description="{% trans %}chemistry_description{% endtrans %}" data-content="{{ path('chemistry') }}" class="gallery-item gallery-item-right">
            <div class="gallery-img">
                <img src="{{ asset('public/img/portfolio/chemistry/chemistry.jpg') }}"/>
            </div>
        </div>
        <div data-title="{% trans %}lunacharsky{% endtrans %}" data-description="{% trans %}lunacharsky_description{% endtrans %}" data-content="{{ path('lunacharsky') }}" class="gallery-item gallery-item-right">
            <div class="gallery-img">
                <img src="{{ asset('public/img/portfolio/lunacharsky/lunacharsky.jpg') }}"/>
            </div>
        </div>
        <div data-title="{% trans %}mircar{% endtrans %}" data-description="{% trans %}mircar_description{% endtrans %}" data-content="{{ path('mircar') }}" class="gallery-item gallery-item-right">
            <div class="gallery-img">
                <img  src="{{ asset('public/img/portfolio/mircar/mircar.jpg') }}"/>
            </div>
        </div>
        <div data-title="{% trans %}b2bmircar{% endtrans %}" data-description="{% trans %}b2bmircar_description{% endtrans %}" data-content="{{ path('b2bmircar') }}" class="gallery-item gallery-item-right">
            <div class="gallery-img">
                <img src="{{ asset('public/img/portfolio/b2bmircar/b2bmircar.jpg') }}"/>
            </div>
        </div>
        <div class="gallery-description">
            <h4 class="gallery-title">{% trans %}prava70{% endtrans %}</h4>
            <p class="gallery-description-text">{% trans %}prava70_description{% endtrans %}</p>
        </div>
        <div class="gallery-navigation">
            <div class="stack stack-left"></div>
            <button class="button primary mr-5 gallery-prev"></button>
            <button class="button primary ml-5 gallery-next"></button>
            <div class="stack stack-right"></div>
        </div>
    </div>
</section>

<div class="portfolio-modal modal-overlay">
    <div class="modal-loader">{% include 'layout/loader.html.twig' %}</div>
    <div class="modal"></div>
</div>